---
const projects = [
    {
        title: "Project One",
        description: "A short description of project one.",
        media: "/assets/project1.mp4",
        link: "#",
    },
    {
        title: "Project Two",
        description: "A short description of project two.",
        media: "/assets/project2.jpg",
        link: "#",
    },
];
---

<div class="grid gap-6 md:grid-cols-2">
    {
        projects.map((project) => (
            <a
                href={project.link}
                class="block p-6 bg-white dark:bg-zinc-700 rounded-lg shadow hover:shadow-lg transition"
            >
                {project.media.endsWith(".mp4") ? (
                    <video
                        src={project.media}
                        controls
                        class="w-full h-48 object-cover mb-4 rounded"
                    />
                ) : (
                    <img
                        src={project.media}
                        alt={project.title}
                        class="w-full h-48 object-cover mb-4 rounded"
                    />
                )}
                <h2 class="text-xl font-semibold dark:text-zinc-100">{project.title}</h2>
                <p class="text-gray-700 dark:text-zinc-200">{project.description}</p>
            </a>
        ))
    }
</div>

