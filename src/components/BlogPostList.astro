---
const posts = [
    {
        title: "First Blog Post",
        date: "2024-05-01",
        summary: "A short summary of the first post.",
        link: "#",
    },
    {
        title: "Second Blog Post",
        date: "2024-04-15",
        summary: "A short summary of the second post.",
        link: "#",
    },
];
---

<div class="grid gap-6 md:grid-cols-2">
    {
        posts.map((post) => (
            <a
                href={post.link}
                class="block p-6 bg-white rounded-lg shadow hover:shadow-lg transition"
            >
                <h2 class="text-xl font-semibold">{post.title}</h2>
                <p class="text-gray-500 text-sm mb-2">{post.date}</p>
                <p class="text-gray-700">{post.summary}</p>
            </a>
        ))
    }
</div>

